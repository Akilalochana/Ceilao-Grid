<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#D0E8D0">

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell Us About Your Garden"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="64dp"
        android:letterSpacing="0.02"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help us understand your garden better to provide personalized plant recommendations"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textColor="#666666"
        android:letterSpacing="0.01"
        android:fontFamily="sans-serif"
        android:alpha="0.87"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Garden Name Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/gardenNameLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:hint="Garden Name (Optional)"
        app:boxStrokeColor="@color/garden_green"
        app:hintTextColor="@color/garden_green"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/subtitleText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gardenNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:padding="16dp"
            android:textSize="16sp"
            android:background="@null"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- District Selection -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/districtInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Select Region"
        app:boxStrokeColor="@color/garden_green"
        app:hintTextColor="@color/garden_green"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/gardenNameLayout">

        <AutoCompleteTextView
            android:id="@+id/districtSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:padding="16dp"
            android:textSize="16sp"
            android:dropDownVerticalOffset="4dp"
            android:popupBackground="@drawable/dropdown_popup_background"
            android:background="@null"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Tips and Tricks Title outside the Box (Left-aligned) -->
    <TextView
        android:id="@+id/tipsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tips and Tricks"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/districtInputLayout"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Tips and Tricks Box with lower opacity background but full opacity text and border -->
    <LinearLayout
        android:id="@+id/tipsBox"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/tips_box_border"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tipsTitle">

        <TextView
            android:id="@+id/tipsContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:gravity="start" />
    </LinearLayout>

    <!-- Continue Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:padding="16dp"
        android:text="Continue"
        android:textSize="16sp"
        app:cornerRadius="24dp"
        android:backgroundTint="@color/garden_green"
        app:layout_constraintTop_toBottomOf="@id/tipsBox"/>
</androidx.constraintlayout.widget.ConstraintLayout>