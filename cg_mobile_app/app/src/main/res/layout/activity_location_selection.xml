<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0EBE0"
    android:padding="16dp">

    <!-- Header Card with proper margins -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="4dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#2A2A2A"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Back Button with improved spacing -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#4CAF50" />

            <!-- Title Text with better spacing -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/backButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Garden Setup"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create your perfect garden space"
                    android:textSize="14sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Input Fields Container -->
    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard">

        <!-- Garden Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/gardenNameLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Garden Name"
            app:boxStrokeColor="#4CAF50"
            app:hintTextColor="#4CAF50"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:startIconDrawable="@drawable/ic_garden"
            app:startIconTint="#4CAF50"
            android:textColorHint="#9E9E9E"
            app:boxBackgroundColor="#E0EBE0">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/gardenNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textColorHint="#757575"
                android:background="@null"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Region Selection -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/districtInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Region"
            app:boxStrokeColor="#4CAF50"
            app:hintTextColor="#4CAF50"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:startIconDrawable="@drawable/ic_location"
            app:startIconTint="#4CAF50"
            android:textColorHint="#9E9E9E"
            app:boxBackgroundColor="#E0EBE0"
            app:startIconContentDescription="Location Icon"
            android:paddingStart="4dp">

            <AutoCompleteTextView
                android:id="@+id/districtSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textColorHint="#757575"
                android:paddingStart="8dp"
                android:background="@null"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Tips Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tipsContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintTop_toBottomOf="@id/inputContainer"
        app:layout_constraintBottom_toTopOf="@id/continueButton"
        android:windowSoftInputMode="adjustResize">

        <!-- Tips Title -->
        <TextView
            android:id="@+id/tipsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips &amp; Guidelines"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:drawableStart="@drawable/ic_tips"
            android:drawablePadding="12dp"
            android:background="#E0EBE0"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Tips ViewPager Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#333333"
            app:layout_constraintTop_toBottomOf="@id/tipsTitle"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#333333">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/tipsViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/dotsIndicator"/>

                <!-- Dots Indicator -->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/dotsIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:background="@android:color/transparent"
                    app:tabBackground="@drawable/dot_selector"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:tabPadding="2dp"
                    app:tabMinWidth="6dp"
                    app:tabMaxWidth="6dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Create Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="4dp"
        android:text="Create Garden"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        android:backgroundTint="#4CAF50"
        app:elevation="8dp"
        android:letterSpacing="0.05"
        android:textAllCaps="false"
        app:icon="@drawable/ic_create"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>