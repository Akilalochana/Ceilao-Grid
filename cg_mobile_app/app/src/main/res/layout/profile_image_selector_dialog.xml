                    android:src="@drawable/farmer5"
                    android:background="@drawable/circular_border"
                    android:padding="3dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
