<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/homeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="16dp"
                android:text="HOME"
                android:textSize="28sp"
                android:textStyle="bold"
                android:elevation="4dp"
                android:layout_marginBottom="24dp"
                android:textColor="@color/black"/>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:padding="16dp"
                android:useDefaultMargins="true"
                android:layout_gravity="center">

                <!-- Chat-Bot Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/timeTableCard"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="#4CAF50"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_time_table"
                            android:tint="#FFFFFF"
                            android:padding="8dp"
                            android:background="#33FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chat-Bot"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Updates Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/homeworkCard"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="#4CAF50"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_homework"
                            android:tint="#FFFFFF"
                            android:padding="8dp"
                            android:background="#33FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Updates"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Weather Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/weatherCard"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="#4CAF50"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_weather"
                            android:tint="#FFFFFF"
                            android:padding="8dp"
                            android:background="#33FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weather"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- AR Plot Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/arPlotCard"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="#4CAF50"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_ar_plot"
                            android:tint="#FFFFFF"
                            android:padding="8dp"
                            android:background="#33FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AR Plot"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Report Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/reportCard"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="#4CAF50"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_report"
                            android:tint="#FFFFFF"
                            android:padding="8dp"
                            android:background="#33FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Report"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Water Cycle Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/waterCycleCard"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="#4CAF50"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_water_cycle"
                            android:tint="#FFFFFF"
                            android:padding="8dp"
                            android:background="#33FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Water Cycle"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>